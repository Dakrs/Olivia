@model Olivia.Models.Recipe

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMenuUser.cshtml";
}

<h2>Edit</h2>

<h4>Recipe</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Id_Recipe" class="control-label"></label>
                <input asp-for="Id_Recipe" class="form-control" />
                <span asp-validation-for="Id_Recipe" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Creator" class="control-label"></label>
                <input asp-for="Creator" class="form-control" />
                <span asp-validation-for="Creator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calories" class="control-label"></label>
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fat" class="control-label"></label>
                <input asp-for="Fat" class="form-control" />
                <span asp-validation-for="Fat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carbs" class="control-label"></label>
                <input asp-for="Carbs" class="form-control" />
                <span asp-validation-for="Carbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Protein" class="control-label"></label>
                <input asp-for="Protein" class="form-control" />
                <span asp-validation-for="Protein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiber" class="control-label"></label>
                <input asp-for="Fiber" class="form-control" />
                <span asp-validation-for="Fiber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sodium" class="control-label"></label>
                <input asp-for="Sodium" class="form-control" />
                <span asp-validation-for="Sodium" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <h2>Instruções</h2>

            <div class="form-group">
                <table style="width:100%">
                    <tr>
                        <th><label asp-for="Instructions[0].Designation" class="control-label"></label></th>
                    </tr>
                    @for (int i = 0; i < Model.Instructions.Count; i++)
                    {
                        <tr>
                            <td><input asp-for="Instructions[i].Designation" class="form-control" placeholder="Step @(i+1) " /></td>
                        </tr>

                    }
                </table>
            </div>

            <h2>Ingredientes</h2>
            <div class="form-group">
                <table style="width:100%">
                    <tr>
                        <th><label asp-for="Ingredients[0].Name" class="form-control"></label></th>
                        <th><label asp-for="Ingredients[0].Quantity" class="form-control"></label></th>
                        <th><label asp-for="Ingredients[0].Unit" class="form-control"></label></th>
                    </tr>
                    @for (int i = 0; i < Model.Ingredients.Count; i++)
                    {
                        <tr>
                            <td><input asp-for="Ingredients[i].Name" class="form-control"></td>
                            <td><input asp-for="Ingredients[i].Quantity" class="form-control"></td>
                            <td><input asp-for="Ingredients[i].Unit" class="form-control"></td>
                        </tr>
                    }

                </table>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
